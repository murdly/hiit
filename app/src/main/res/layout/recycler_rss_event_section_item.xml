<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/keyline_1">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_tech_android"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/info_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/icon"
            android:layout_toStartOf="@+id/action_enroll"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_section_title"
                android:text="Spotkanie organizacyjne blabfgfgfggfgfgfgla"
                android:textColor="@color/black_87"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="3 uczestnikÃ³w, 20:30"
                android:textColor="@color/black_54"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/action_enroll"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:tint="@color/black_54"
            android:src="@drawable/ic_participate" />
    </RelativeLayout>
</android.support.v7.widget.CardView>